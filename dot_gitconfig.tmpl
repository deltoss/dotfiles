[user]
	name = {{ .username | quote }}
	email = {{ .email | quote }}
[core]
	autocrlf = true
	sshCommand = C:/Windows/System32/OpenSSH/ssh.exe
	editor = nvim
	pager = delta
	hooksPath = ~/.config/git/hooks
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = true
	side-by-side = true
[merge]
	conflictStyle = zdiff3
	tool = diffview
	renormalize = true
	ff = false # Even create extra merge commit when fast forward merge would be possible
[pull]
	rebase = true
	ff = only # Disallows non ff merges on pull. Overrides merge.ff when pulling
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "diffview"]
	cmd = nvim -n -c "DiffviewOpen" "$MERGE"
[alias]
	c = commit
	ac = !git add -A && git commit
	m = merge -X ignore-cr-at-eol
	rb = rebase -i
	s = status -sb
	l = log --all --color=always --pretty=format:\"%C(yellow)%h%C(reset) %C(green)%ad%C(reset) %C(blue)(%an)%C(reset) %s â†’ %H\" --date=format:\"%Y-%m-%d %I:%M %p\"
	co = checkout
	b = branch
	amend = commit --amend --no-edit
	undo = reset --soft HEAD~1
	aliases = config --get-regexp alias
	today = log --since='midnight' --oneline --author={{ .username | quote }}
[push]
	autoSetupRemote = true