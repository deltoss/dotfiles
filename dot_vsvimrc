nmap [[ :vsc Edit.PreviousMethod<CR>
vmap [[ :vsc Edit.PreviousMethod<CR>
nmap ]] :vsc Edit.NextMethod<CR>
vmap ]] :vsc Edit.NextMethod<CR>

nmap <leader>pb :vsc Build.RebuildSelection<CR>
nmap <leader>ps :vsc Build.RebuildSelection<CR>
